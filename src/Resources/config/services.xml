<!--        </service>-->

        <service id="MatheusGontijo\SystemConfigHistory\Model\SystemConfigRepositoryDecoration" decorates="system_config.repository" decoration-priority="-1000" public="true">
            <argument type="service" id=".inner"/>
            <argument type="service" id="MatheusGontijo\SystemConfigHistory\Repository\Model\SystemConfigRepositoryDecorationRepository"/>
            <argument type="service" id="MatheusGontijo\SystemConfigHistory\Model\RequestStateRegistry"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigDefinition"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Read\EntityReaderInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\VersionManager"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntitySearcherInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntityAggregatorInterface"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Event\EntityLoadedEventFactory"/>
        </service>

        <service id="MatheusGontijo\SystemConfigHistory\System\MatheusGontijoSystemConfigHistory\MatheusGontijoSystemConfigHistoryDefinition">
            <tag name="shopware.entity.definition" entity="matheus_gontijo_system_config_history" />
        </service>

        <service id="MatheusGontijo\SystemConfigHistory\System\MatheusGontijoSystemConfigHistory\MatheusGontijoSystemConfigHistoryHydrator" public="true">
            <argument type="service" id="service_container" />
        </service>

        <service id="MatheusGontijo\SystemConfigHistory\Subscriber\KernelControllerArgumentsSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
